                "Lietuvių",
                "Slovenčina",
                "Srpski",
                "Slovenščina",
                "Tiếng Việt",
                "Filipino",
                "Íslenska"
            ]
        },
        "proxyConfig": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "SHADER proxy group usually works the best if you have access to it.",
            "prefill": { "useApifyProxy": true },
            "editor": "proxy",
            "sectionCaption": "Proxy Configuration"
        },
        "testProxy": {
            "title": "Test proxies (useful for proxy groups with many blocked IPs, experimental)",
            "type": "boolean",
            "description": "Before starting crawling, the crawler will try to find a proxy that's not blocked by Booking.",
            "default": false
        },
        "extendOutputFunction": {
            "title": "Extend output function",
            "type": "string",
            "nullable": true,
            "description": "Function that takes a JQuery handle ($) as argument and returns data that will be merged with the default output",
            "prefill": "($) => { return {} }",
            "editor": "javascript",
            "sectionCaption": "Extend output"
        }
    },
    "required": ["proxyConfig"]
}
